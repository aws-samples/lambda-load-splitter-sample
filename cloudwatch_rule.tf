# Define a CloudWatch Rule that can monitor EC2 Tags changes
resource "aws_cloudwatch_event_rule" "ec2_events" {
  name          = "${var.prefix}_cloudtrailevent"
  description   = "Triggers compliance related lambda for every new instance addition"
  event_pattern = <<PATTERN
{
  "source": [
    "aws.ec2"
  ],
  "detail-type": [
    "AWS API Call via CloudTrail"
  ],
  "detail": {
    "eventSource": [
      "ec2.amazonaws.com"
    ],
    "eventName": [
      "CreateTags",
      "DeleteTags"
    ]
  }
}
PATTERN
}
